{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2020",
		"jsx": "react",
        "allowImportingTsExtensions": true,
        "noEmit": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"exclude": ["node_modules", "**/node_modules/*"],
    "typescript.tsserver.experimental.enableProjectDiagnostics": false
}
